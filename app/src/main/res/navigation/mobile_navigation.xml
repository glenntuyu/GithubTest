<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">
    <fragment
        android:id="@+id/home_dest"
        android:name="com.astro.test.glenntuyu.ui.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment">
        <argument
            android:name="sortOrder"
            app:argType="string"
            android:defaultValue="asc"/>
        <argument
            android:name="query"
            app:argType="string"
            android:defaultValue="qwe"/>

        <action
            android:id="@+id/next_action"
            app:destination="@+id/sort_order_dest">
        </action>
    </fragment>

    <dialog
        android:id="@+id/sort_order_dest"
        android:name="com.astro.test.glenntuyu.ui.sortorder.SortOrderBottomSheetFragment"
        android:label="@string/app_name"
        tools:layout="@layout/sort_order_bottom_sheet_fragment">
        <argument
            android:name="query"
            app:argType="string"
            android:defaultValue="qwe"/>

        <action
            android:id="@+id/next_action"
            app:destination="@+id/home_dest">
        </action>
    </dialog>
</navigation>
