<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">
    <fragment
        android:id="@+id/home_dest"
        android:name="com.astro.test.glenntuyu.ui.home.HomeFragment"
        android:label="@string/toolbar_title"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="sortOrder"
            app:argType="string"
            android:defaultValue="asc"/>
        <argument
            android:name="query"
            app:argType="string"
            android:defaultValue="qwe"/>

        <action
            android:id="@+id/move_to_sort_order"
            app:destination="@+id/sort_order_dest">
        </action>

        <action
            android:id="@+id/move_to_user_detail"
            app:destination="@+id/user_detail_dest">
        </action>
    </fragment>

    <fragment
        android:id="@+id/user_detail_dest"
        android:name="com.astro.test.glenntuyu.ui.userdetail.UserDetailFragment"
        android:label="@string/toolbar_title"
        tools:layout="@layout/fragment_user_detail">

        <argument
            android:name="username"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true"/>
    </fragment>

    <dialog
        android:id="@+id/sort_order_dest"
        android:name="com.astro.test.glenntuyu.ui.sortorder.SortOrderBottomSheetFragment"
        android:label="@string/toolbar_title"
        tools:layout="@layout/fragment_sort_order_bottom_sheet">
        <argument
            android:name="query"
            app:argType="string"
            android:defaultValue="qwe"/>

        <action
            android:id="@+id/next_action"
            app:destination="@+id/home_dest">
        </action>
    </dialog>
</navigation>
