<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">
    <fragment
        android:id="@+id/home_dest"
        android:name="com.astro.test.glenntuyu.ui.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/next_action"
            app:destination="@id/sort_dest" />
    </fragment>

    <fragment
        android:id="@+id/sort_dest"
        android:name="com.astro.test.glenntuyu.ui.sort.SortBottomSheetFragment"
        android:label="@string/app_name"
        tools:layout="@layout/sort_bottom_sheet_fragment">
    </fragment>
</navigation>
